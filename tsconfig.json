{
  "exclude": [
    "node_modules",
    "assets"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "compilerOptions": {
    "outDir": "ts-build/",
    "downlevelIteration": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "plugins": [{ "transform": "ts-optchain/transform" }],
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}

